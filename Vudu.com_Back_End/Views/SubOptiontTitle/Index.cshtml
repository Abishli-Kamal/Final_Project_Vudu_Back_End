@model HomeVM
@{
    ViewData["Title"] = "Index";
}

<main>
    <section id="Uhdheader">
        <div class="container">
            <div class="mainTitle d-flex">
                <div class="title text-center mt-3">
                    <h4>4K UHD (42)</h4>
                </div>
                <div class="responsiveMenubar mt-4">
                    <i class="fa-solid fa-bars" id="respMenu"></i>
                </div>
            </div>

            <div class="row">
                <div class="title d-flex justify-content-between mt-5">
                    <div class="reset">
                        <a href="">Reset</a>
                    </div>
                    <div class="responsiveUl ">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Most Watched
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Release Date</a>
                            </div>
                        </div>
                    </div>
                    <div class="sub d-flex ">
                        <button class="btn border-rounded titleBtn" id="filterBtn">
                            Filters <i class="fa-solid fa-sort-down ml-2"></i>
                        </button>
                    </div>

                </div>
            </div>
            <div class="respMenuFilters">
                <div class="filters mt-3 ">
                    <div class="title ">
                        <h6 class="">Genre:</h6>
                    </div>
                    <div class="genre d-flex ">
                        <div class="firstGenre mt-2">
                            <ul>
                                <li><a href=""><input type="radio" checked> All</a></li>

                                <li><a href=""><input type="radio">Animation</a></li>
                                <li><a href=""><input type="radio">Crime & Thrillers</a></li>
                                <li><a href=""><input type="radio">Kids & Family</a></li>
                                <li><a href=""><input type="radio">Sci-Fi</a></li>
                            </ul>
                        </div>
                        <div class="secondGenre ml-5 mt-2">
                            <ul>
                                <li><a href=""><input type="radio"> Action</a></li>
                                <li><a href=""><input type="radio">Comedy</a></li>
                                <li><a href=""><input type="radio">Horror</a></li>
                                <li><a href=""><input type="radio">Romance</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="filters mt-3 ">
                    <div class="title ">
                        <h6 class="">Ways to Watch:</h6>
                    </div>
                    <div class="genre d-flex ">
                        <div class="firstGenre mt-2">
                            <ul>
                                <li><a href=""><input type="radio" checked> All</a></li>
                            </ul>
                        </div>
                        <div class="secondGenre ml-5 mt-2">
                            <ul>
                                <li><a href=""><input type="radio"> Free with ads</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="filters mt-3 ">
                    <div class="title ">
                        <h6 class="">Tomatometers:</h6>
                    </div>
                    <div class="genre d-flex ">
                        <div class="firstGenre mt-2">
                            <ul>
                                <li><a href=""><input type="radio" checked> All</a></li>
                            </ul>
                        </div>
                        <div class="secondGenre ml-5 mt-2">
                            <ul>
                                <li><a href=""><input type="radio"> Fresh only</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="filterAll mt-5">
                <div class="row">
                    <div class="filters  col-lg-2">
                        <div class="title ">
                            <h6 class="">Genre:</h6>
                        </div>
                        <div class="genre">
                            <div class="firstGenre ">
                                <ul>
                                    <li><a href="">Action</a></li>
                                    <li><a href="">Animation</a></li>
                                    <li><a href="">Comedy</a></li>
                                    <li><a href="">Crime & Thrillers</a></li>
                                    <li><a href="">Horror</a></li>
                                    <li><a href="">Kids & Family</a></li>
                                    <li><a href="">Romance</a></li>
                                    <li><a href="">Sci-Fi</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="filters  col-lg-2">
                        <div class="title ">
                            <h6 class="">Ways to Watch:</h6>
                        </div>
                        <div class="genre">
                            <div class="firstGenre">
                                <ul>
                                    <li><a href="">Free with ads</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="filters col-lg-2">
                        <div class="title ">
                            <h6 class="">Tomatometer:</h6>
                        </div>
                        <div class="genre ">
                            <div class="firstGenre">
                                <ul>
                                    <li><a href="">Fresh only</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clear text-center">
                    <a href="">Clear all filters</a>
                </div>
                <hr>
            </div>
        </div>


    </section>
    <section id="UhdMain">
        <div class="mt-4 container ">
            <div id="all-movies">
                <div class="container">
                    <div class="row w-100">
                        @foreach (MovieSubOptionTitle sub in Model.MovieSubOptionTitles)
                        {
                            <div class="col-lg-2 cardReleases">
                                <div class="img">
                                    <a href="">
                                        <img class="w-100" src="~/assets/img/Releases/@sub.Movie.Image"
                                         alt="">
                                    </a>
                                </div>
                                <div class="description">
                                    <a href="">
                                        <h6 class="p-2">@sub.Movie.Name </h6>
                                        <span> Jun 10 PG-13 @sub.Movie.Length</span>
                                        <div class="pl-2 check">
                                            <i class="fa-regular fa-circle-check"></i><span>@sub.Movie.Age</span>
                                        </div>

                                        <div class="icon d-flex">
                                            <div class="star d-flex pt-2">
                                                <i class="fa-solid fa-star"></i>
                                                <i class="fa-solid fa-star"></i>
                                                <i class="fa-solid fa-star"></i>
                                                <i class="fa-solid fa-star"></i>
                                                <i class="fa-regular fa-star"></i>
                                            </div>
                                            <div class="faiz">
                                                <span>@sub.Movie.RottenTomatoes</span>
                                            </div>
                                        </div>
                                        <div class="mt-3 plus">
                                            <i class="fa-solid fa-circle-plus"></i>
                                        </div>
                                        <div class="buttonTr mt-1">
                                            <a href="#" onclick="openTrailer()"><button>Trailer</button></a>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="Trailer">
        <div id="myTrailer" class="overlay">
            <a href="javascript:void(0)" class="closebtn" onclick="closeTrailer()">&times;</a>
            <div class="overlay-content">
                <iframe style="width: 100%; display: block;" src="https://www.youtube.com/embed/AJktDS4dV18"
                        title="YouTube video player" frameborder="0"
                        allowfullscreen></iframe>
            </div>
        </div>

    </section>
</main>


