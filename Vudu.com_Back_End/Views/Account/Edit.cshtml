@model EditUserVM
@{
    ViewData["Title"] = "Edit";
}

<main>
    <section id="Register">
        <div class="image d-flex justify-content-center">
            <img src="assets/img/Register.png" alt="">
        </div>
        <div class="container Form">
            <div class="title text-center ">
                <h4>Create Free Account</h4>
            </div>
            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
            <form method="post">

                <div class="name row mt-3   ">
                    <div class="col-lg-6 ">
                        <input asp-for="Firstname" placeholder="First Name" class="form-control w-100 mt-2" />
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6 ">
                        <input asp-for="Lastname" placeholder="Last Name" class=" w-100 form-control mt-2" />
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>

                </div>
                <div class="d-flex justify-content-center ">
                    <input asp-for="Username" placeholder="Username" class=" mt-2 form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
               <div class="d-flex justify-content-center ">
                    <input asp-for="Email" placeholder="Email Address" class="form-control mt-2" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center ">
                    <input asp-for="CurrenPassword" placeholder="Curren Password" class="form-control mt-2" />
                    <span asp-validation-for="CurrenPassword" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center ">
                    <input asp-for="NewPassword" placeholder="New Password" class="form-control mt-2" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center ">
                    <input asp-for="NewConfirmPassword" placeholder="New Confirm Password" class="mt-2 form-control" />
                    <span asp-validation-for="NewConfirmPassword" class="text-danger"></span>
                </div>

                <div class="Registerbtn d-flex justify-content-center mx-5 mt-2">
                    <button type="submit" class="btn btn-primary mb-3">Edit Profil</button>
                </div>
            </form>
        </div>

    </section>
</main>
<hr>

