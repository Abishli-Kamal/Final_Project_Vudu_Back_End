                            <ul>
                                <li><a href=""><input type="radio">R and below</a></li>
                                <li><a href=""><input type="radio">PG and below</a></li>
                                <li><a href=""><input type="radio">G</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="filters mt-3 ">
                    <div class="title ">
                        <h6 class="">Studio:</h6>
                    </div>
                    <div class="genre d-flex ">
                        <div class="firstGenre mt-2">
                            <ul>
                                <li><a href=""><input type="radio" checked> Any Studio</a></li>
                                <li><a href=""><input type="radio"> AMC Film</a></li>
                                <li><a href=""><input type="radio"> Paramount Pictures</a></li>
                                <li><a href=""><input type="radio">Sony Pictures</a></li>
                                <li><a href=""><input type="radio">VUDU</a></li>
                                <li><a href=""><input type="radio">Warner Bros</a></li>
                            </ul>
