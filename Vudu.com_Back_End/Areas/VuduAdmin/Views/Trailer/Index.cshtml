@using X.PagedList
@using X.PagedList.Mvc.Core
@model PagedList<Trailer>
@{
    ViewData["Title"] = "Index";
}

<div class=" mt-4">
    <a class="btn btn-dark" asp-controller="Trailer" asp-action="Create">Create</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Trailer trailer in Model)
        {
            <tr>
                <td>@trailer.Id</td>
                <td>@trailer.Title</td>
                <td>
                    <div class="d-flex justify-content-around">
                        <div>
                            <a class="mx-2" style="color:red; font-size:25px;" asp-controller="Trailer" asp-action="Detail" asp-route-Id="@trailer.Id"><i class="fa-solid fa-circle-info"></i></a>
                        </div>

                        <div>
                            <a style="color:red; font-size:25px;" asp-controller="Trailer" asp-action="Edit" asp-route-Id="@trailer.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                        </div>

                        <div class="mx-2">
                            <a style="color:red; font-size:25px;" asp-controller="Trailer" asp-action="Delete" asp-route-Id="@trailer.Id"><i class="fa-solid fa-trash-can"></i></a>
                        </div>
                    </div>

                </td>
            </tr>
        }

    </tbody>
</table>
 @Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}),new X.PagedList.Web.Common.PagedListRenderOptionsBase
{
    LiElementClasses=new[] {"page-item"},
    PageClasses = new[] {"page-link"}
})