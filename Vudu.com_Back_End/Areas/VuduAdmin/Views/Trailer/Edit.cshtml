
@model Trailer
@{
    ViewData["Title"] = "Edit";
}

<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
<form method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input asp-for="Title" class="form-control" id="name">
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>  
        <div>
        <select class="form-select mt-2" style="cursor:pointer;" asp-for="MovieId" asp-items="@(new SelectList(ViewBag.Movie,"Id","Name"))">
            <option>Movie:</option>
        </select> <br />
        <span class="text-danger" asp-validation-for="MovieId"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-dark mt-3">Edit</button>
    </div>
</form>

