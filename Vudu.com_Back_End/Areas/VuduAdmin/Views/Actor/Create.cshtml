@model Actor
@{
    ViewData["Title"] = "Create";
}
<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">Name</label>
        <input asp-for="Name" class="form-control" id="name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label for="name">Duty</label>
        <input asp-for="Duty" class="form-control" id="name">
        <span class="text-danger" asp-validation-for="Duty"></span>
    </div>

    <div>
        <select class="form-control mt-2" style="cursor:pointer;" asp-for="MoviesIds" asp-items="@(new SelectList(ViewBag.Movies,"id","Name"))"></select> <br />
        <span class="text-danger" asp-validation-for="MoviesIds"></span>
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input asp-for="Photo" class="form-control" id="name">
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-dark mt-3">Create</button>
    </div>
</form>
