@model Movie
@{
    ViewData["Title"] = "Detail";
}

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th scope="col">Background Image</th>
            <th scope="col">Age</th>
            <th scope="col">Length</th>
            <th scope="col">Language</th>
             <th scope="col">Description</th>
              <th scope="col">Movie Info</th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Name</td>
            <td>
                <img class="w-100" src="~/assets/img/Releases/@Model.Image" />
            </td>
            <td>
                <img class="w-100" src="~/assets/img/Releases/DetailBack/@Model.BackImage" />
            </td>
            <td>@Model.Age</td>
            <td>@Model.Length</td>
            <td>@Model.Language</td>
            <td >@Model.Description</td>
            <td >@Model.InfoMovie</td>
        </tr>
</table>
